struct Node {
  var next: Node;
}

datatype Interface =
  int(Inf: Set<Map<Node, Int>>,  // TODO have one elem inf to eliminate exists?
      fm: Map<Node, Map<Node, Int>>,
      FP: Set<Node>,
      FPo: Set<Node>) | intUndef;

predicate Gr(I: Interface)

predicate N(x: Node, I: Interface)

// A functional semantics for interface composition
function intComp(I1: Interface, I2: Interface) returns (I: Interface)

/** Gamma is hardcoded into these two lemmas */

procedure lemma_conc(x: Node, I: Interface)
  returns ()
  requires N(x, I)
  ensures [acc(x) &*& (exists inf in I.Inf :: inf[x] == 1 && I.Inf == {inf}) &*& (x.next == null && I.FPo == {} || x.next != null && I.FPo == {x.next} && I.fm[x][x.next] == 1)](I) &*& I.FP == {x}

procedure lemma_abs(x: Node, I: Interface, I1: Interface)
  returns ()
  requires [acc(x) &*& (exists inf in I.Inf :: inf[x] == 1 && I.Inf == {inf}) &*& (x.next == null && I1.FPo == {} || x.next != null && I1.FPo == {x.next} && I1.fm[x][x.next] == 1)](I) &*& I1.FP == {x}
  ensures [N(x, I1)](I)
{}

/** Lemmas */

