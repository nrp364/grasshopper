struct Node {
  var next: Node;
}
 
predicate lseg(x: Node, y: Node) {
  true
}

procedure lemma_unfold_lseg(x: Node) returns (y: Node)
  requires lseg(x, null) &*& x != null
  ensures x.next |-> y &*& lseg(y, null)


procedure test_unfold(x: Node) returns (y: Node)
  requires lseg(x, null) &*& x != null
  ensures x.next |-> y &*& lseg(y, null)
{
  y := x.next;
}
